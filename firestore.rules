rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção 'tarefas'
    match /tarefas/{document} {
      // Permitir leitura se a tarefa for pública
      allow read: if resource.data.public == true;
      // Permitir escrita apenas se o usuário for o dono da tarefa (baseado no email)
      allow write: if resource.data.user == request.auth.token.email;
      // Permitir criação se o usuário estiver autenticado e for o dono
      allow create: if request.auth != null && request.resource.data.user == request.auth.token.email;
    }
    
    // Regras para a coleção 'comments'
    match /comments/{document} {
      // Permitir leitura para todos os usuários autenticados
      allow read: if request.auth != null;
      // Permitir escrita apenas se o usuário for o dono do comentário (baseado no email)
      allow write: if resource.data.user == request.auth.token.email;
      // Permitir criação se o usuário estiver autenticado e for o dono
      allow create: if request.auth != null && request.resource.data.user == request.auth.token.email;
    }
  }
}
